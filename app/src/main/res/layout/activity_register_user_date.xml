<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_line_bg"
    tools:context=".RegisterUserDate">

    <Button
        android:id="@+id/BtnConsultarUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:paddingHorizontal="10dp"
        android:text="Consultar usuario"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/nunito"
        app:layout_constraintBottom_toTopOf="@+id/TextoExisteUsuario"
        app:layout_constraintEnd_toEndOf="@+id/BtnEncolarUsuario"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/BtnEncolarUsuario"
        app:layout_constraintTop_toBottomOf="@+id/DocumentoEditText" />

    <EditText
        android:id="@+id/DocumentoEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:hint="@string/documentoUsuarioInstantaneo"
        android:inputType="textPersonName"
        app:fontFamily="@font/nunito"
        app:layout_constraintBottom_toTopOf="@+id/BtnConsultarUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView34"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <TextView
        android:id="@+id/TextoExisteUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ingresa el documento del usuario"
        app:fontFamily="@font/nunito"
        app:layout_constraintBottom_toTopOf="@+id/BtnEncolarUsuario"
        app:layout_constraintEnd_toEndOf="@+id/DocumentoEditText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/DocumentoEditText"
        app:layout_constraintTop_toBottomOf="@+id/BtnConsultarUsuario" />

    <Button
        android:id="@+id/BtnEncolarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:paddingHorizontal="10dp"
        android:text="Registrar cita al usuario"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/nunito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/DocumentoEditText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/DocumentoEditText"
        app:layout_constraintTop_toBottomOf="@+id/TextoExisteUsuario" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Registro de Usuario Externo"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:fontFamily="@font/nunito"
        app:layout_constraintBottom_toTopOf="@+id/guideline12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08071136" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Documento de IdentificaciÃ³n del Usuario"
        app:fontFamily="@font/nunito"
        app:layout_constraintBottom_toTopOf="@+id/DocumentoEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline12"
        app:layout_constraintVertical_chainStyle="spread" />
</androidx.constraintlayout.widget.ConstraintLayout>