<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DatosPrincipales">

    <TextView
            android:id="@+id/tvinfobasica"
            android:gravity="center"
            android:text="@string/lb_datos_princ"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#2E2A2A"
            android:textSize="35sp"
            android:textStyle="bold"
            android:background="#0F0F0F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num_id" tools:layout_editor_absoluteY="78dp" tools:layout_editor_absoluteX="99dp"
            android:hint="@string/identificacion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usu_nombre" tools:layout_editor_absoluteY="151dp" tools:layout_editor_absoluteX="99dp"
            android:hint="@string/nombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usu_apellido" tools:layout_editor_absoluteY="230dp" tools:layout_editor_absoluteX="99dp"
            android:hint="@string/apellido"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/naci_anio" tools:layout_editor_absoluteY="313dp" tools:layout_editor_absoluteX="99dp"
            android:hint="@string/anio"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/naci_mes" tools:layout_editor_absoluteY="313dp" tools:layout_editor_absoluteX="198dp"
            android:hint="@string/mes"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/naci_dia" tools:layout_editor_absoluteY="313dp" tools:layout_editor_absoluteX="252dp"
            android:hint="@string/dia"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rg_discapacidad">
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>