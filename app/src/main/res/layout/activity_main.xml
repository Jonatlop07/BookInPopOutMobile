<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/ingresa_correo"
            android:gravity="center"
            android:text="@string/inicia_sesion"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#2E2A2A"
            android:textSize="28sp"
            android:textStyle="bold"
            android:background="#0F0F0F" />
    <EditText
            android:id="@+id/ingresa_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" android:layout_marginTop="20dp"
            android:hint="@string/correo"
            android:inputType="textEmailAddress"
            android:ems="10"/>

    <EditText
            android:id="@+id/ingresa_clave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ingresa_correo"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:ems="10" />
    <Button
            android:id="@+id/iniciar_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ingresa_clave" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:background="#000000"
            android:onClick="iniciarSesion"
            android:padding="10dp"
            android:text="@string/boton_ingresar"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#000000"
            android:textSize="24sp"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/tv_Registrese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="176dp"
            android:layout_marginStart="176dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp" android:layout_marginRight="176dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iniciar_sesion" android:layout_marginBottom="408dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="irVentanaRegistro"
            android:text="@string/registrarse"
            android:textColor="#2E2ECA"
            android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>