<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tvinfobasica"
            android:gravity="center"
            android:text="@string/registrate"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#2E2A2A"
            android:textSize="35sp"
            android:textStyle="bold"
            android:background="#0F0F0F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:id="@+id/correo_reg"
            android:inputType="textEmailAddress"
            android:hint="@string/correo"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" tools:layout_editor_absoluteY="97dp" tools:layout_editor_absoluteX="0dp"/>
    <EditText
            android:id="@+id/clave_reg"
            android:inputType="textPassword"
            android:hint="@string/clave"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" tools:layout_editor_absoluteY="197dp" tools:layout_editor_absoluteX="36dp"/>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="404dp" tools:layout_editor_absoluteX="38dp">
        <RadioButton
                android:id="@+id/rb_usu_final"
                android:text="@string/usu_final"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
        <RadioButton
                android:id="@+id/rb_usu_empresarial"
                android:text="@string/usu_empresarial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
            android:id="@+id/prim_fase_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:onClick="continuar"
            android:padding="10dp"
            android:text="@string/boton_continuar"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="548dp" tools:layout_editor_absoluteX="149dp"/>

    <Button
            android:id="@+id/iniciar_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:onClick="iniciarSesion"
            android:padding="10dp"
            android:text="@string/boton_continuar"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="548dp" tools:layout_editor_absoluteX="149dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>